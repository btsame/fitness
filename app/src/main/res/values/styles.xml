<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appgreen</item>

        <!-- remove title bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:listDivider">@drawable/shape_list_divider</item>
    </style>

    <style name="dm_alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.65</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="frag_find_tab" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="linearlayout_bg_style">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/bg_linearlayout</item>
    </style>

    <style name="ABlackTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="btn_postive_style" parent="@android:style/Widget.Button">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_menu_ok_gray_selector_8r</item>
        <item name="android:layout_marginTop">8.0dip</item>
    </style>
    <style name="style_rating_large" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">21.0dip</item>
        <item name="android:progressDrawable">@drawable/custom_rating_large</item>
        <item name="android:minHeight">21.0dip</item>
    </style>

</resources>
