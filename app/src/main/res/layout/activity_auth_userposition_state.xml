<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_main_bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/activity_main_bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_auth_doing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_init_data_empty"
                android:layout_width="134.0dip"
                android:layout_height="85.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50.0dip"
                android:src="@drawable/icon_identitying" />

            <TextView
                android:id="@+id/tv_init_data_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_init_data_empty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20.0dip"
                android:text="您的资料正在审核中"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_init_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_init_data_empty"
                android:layout_marginBottom="30.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="审核结果将在1~3天内通知您！请耐心等待！"
                android:textColor="#ffaaaaaa"
                android:textSize="13.0dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@color/white_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_doing_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="用户类型"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_auth_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ffaaaaaa"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/main_lines_bg" />

            <LinearLayout
                android:id="@+id/layout_ll_companyname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:padding="12.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="企业名称"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/tv_authdoing_companyname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ffaaaaaa"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/main_lines_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="真实姓名"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_authdoing_accountname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ffaaaaaa"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </LinearLayout>

       <!-- <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:gravity="center"
            android:text="@string/authTishi1"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/text_size_15" />-->
    </LinearLayout>
</LinearLayout>