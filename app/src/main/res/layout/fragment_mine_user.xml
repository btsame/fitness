<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="30dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_accout_icon"
            android:layout_width="66dip"
            android:layout_height="66dip"
            android:layout_margin="10dp"
            android:background="@drawable/user_head"
            android:scaleType="fitXY" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="用户名"
                android:textSize="18sp"/>
            <Button
                android:background="@null"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/btn_editUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑个人资料"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lv_staus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="动态"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv_foucs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="关注"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_fans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="粉丝"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_money"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:minHeight="48dip">

            <ImageView
                android:id="@+id/iv_money"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:background="@drawable/me_party_income" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/iv_money"
                android:text="待付款"
                android:textColor="@color/top_introduce_text_color"
                android:textSize="16sp" />

            <include
                android:id="@+id/tv_fans_notice_count"
                layout="@layout/textview_red_count_tip"
                android:layout_width="@dimen/home_menu_counts_size"
                android:layout_height="@dimen/home_menu_counts_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3.0dip"
                android:layout_toRightOf="@id/tv_money" />

            <ImageView
                android:layout_width="12.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@drawable/area_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/divider_new" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_fans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:minHeight="48dip">
            <ImageView
                android:id="@+id/iv_fans"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip" android:background="@drawable/me_fans" />

            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/iv_fans"
                android:text="待参与（活动群聊）"
                android:textColor="@color/top_introduce_text_color"
                android:textSize="16sp" />
            <include
                android:id="@+id/tv_fans_notice_count"
                layout="@layout/textview_red_count_tip"
                android:layout_width="@dimen/home_menu_counts_size"
                android:layout_height="@dimen/home_menu_counts_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3.0dip"
                android:layout_toRightOf="@id/tv_fans" />
            <ImageView
                android:layout_width="12.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@drawable/area_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/divider_new" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_complete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:minHeight="48dip">
            <ImageView
                android:id="@+id/iv_complete"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip" android:background="@drawable/me_complete" />

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/iv_complete"
                android:text="已完成"
                android:textColor="@color/top_introduce_text_color"
                android:textSize="16sp" />
            <include
                android:id="@+id/tv_fans_notice_count"
                layout="@layout/textview_red_count_tip"
                android:layout_width="@dimen/home_menu_counts_size"
                android:layout_height="@dimen/home_menu_counts_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3.0dip"
                android:layout_toRightOf="@id/tv_complete" />
            <ImageView
                android:layout_width="12.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@drawable/area_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/divider_new" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_guide"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:minHeight="48dip">
            <ImageView
                android:id="@+id/iv_guide"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:background="@drawable/me_party_guide" />
            <TextView
                android:id="@+id/tv_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/iv_guide"
                android:text="活动指南"
                android:textColor="@color/top_introduce_text_color"
                android:textSize="16sp" />
            <include
                android:id="@+id/tv_fans_notice_count"
                layout="@layout/textview_red_count_tip"
                android:layout_width="@dimen/home_menu_counts_size"
                android:layout_height="@dimen/home_menu_counts_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3.0dip"
                android:layout_toRightOf="@id/tv_guide" />
            <ImageView
                android:layout_width="12.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@drawable/area_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/divider_new" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:minHeight="48dip">
            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:background="@drawable/me_setting_p" />
            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/iv_settings"
                android:text="设置管理"
                android:textColor="@color/top_introduce_text_color"
                android:textSize="16sp" />
            <include
                android:id="@+id/tv_fans_notice_count"
                layout="@layout/textview_red_count_tip"
                android:layout_width="@dimen/home_menu_counts_size"
                android:layout_height="@dimen/home_menu_counts_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3.0dip"
                android:layout_toRightOf="@id/tv_settings" />

            <ImageView
                android:layout_width="12.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@drawable/area_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/divider_new" />
    </LinearLayout>
</LinearLayout>
