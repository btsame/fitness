<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/appgreen">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="忘记密码"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/forget_input_phonenumber"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/edit_input_background"
            android:hint="手机号码"
            android:inputType="phone"
            android:paddingLeft="10.0dip"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/testselector"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forget_input_auth_code"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_input_background"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:minLines="4"
            android:paddingLeft="10.0dip"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp" />

        <Button
            android:id="@+id/forget_get_auth_code_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/gray_button_selector"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/testselector"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_input_background"
            android:hint="密码，6-16位字母或数字"
            android:inputType="number"
            android:maxLength="6"
            android:minLines="4"
            android:paddingLeft="10.0dip"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp" />
    </LinearLayout>
    <Button
        android:id="@+id/forget_go_registerbyphone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/linearLayout3"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:background="@drawable/green_button_selector"
        android:text="重置密码"
        android:textColor="@color/white"
        android:textSize="14.0sp" />

</LinearLayout>