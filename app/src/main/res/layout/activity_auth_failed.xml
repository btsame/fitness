<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_main_bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/v_divider_mid"
            android:layout_width="fill_parent"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_auth_failed_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_divider_mid"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:gravity="center_horizontal"
            android:textColor="@color/light_gray_text_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_sign_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_auth_failed_reason"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30.0dip"
            android:gravity="center_horizontal"
            android:text="未通过审核"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_20" />


        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_above="@id/tv_sign_failed"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/content_margin"
            android:src="@drawable/party_sign_error" />





        <LinearLayout
            android:id="@+id/layout_auth_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_divider_mid"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hudongba_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/content_margin"
                android:gravity="center"
                android:textColor="@color/service_statement_color"
                android:textSize="@dimen/text_size_14" />

