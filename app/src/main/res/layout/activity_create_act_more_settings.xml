<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/appgreen">

        <ImageButton
            android:id="@+id/left_button"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="22.0dip"
            android:background="@null"
            android:src="@drawable/btn_back_arrow_selector" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="高级设置"
            android:textColor="@color/white"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_publish_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="保存"
            android:textColor="@android:color/white" />
    </RelativeLayout>




    <LinearLayout
        android:layout_marginTop="15.0dip"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/edit_input_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:text="活动标签："
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/top_introduce_text_color" />

        <EditText
            android:id="@+id/et_act_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="格式为#减脂##瘦腿#,最多添加两个"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/top_introduce_text_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/edit_input_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:text="自备器材："
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/top_introduce_text_color" />

        <EditText
            android:id="@+id/et_act_equipment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/top_introduce_text_color" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_act_sex"
        android:layout_width="match_parent"
        android:layout_height="45dip"

        android:background="@drawable/edit_input_background"
        android:gravity="center_vertical"
        android:onClick="OnSetSex"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:text="性别限制"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/top_introduce_text_color" />

        <TextView
            android:id="@+id/tv_act_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dip"
            android:text="" />

        <ImageView
            android:layout_width="12.0dip"
            android:layout_height="18.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:background="@drawable/area_arrow" />
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="45dip"

        android:background="@drawable/edit_input_background"
        android:gravity="center_vertical"
        android:onClick="OnSetShower"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:text="淋浴锁柜"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/top_introduce_text_color" />

        <TextView
            android:id="@+id/tv_act_shower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dip"
            android:text="" />

        <ImageView
            android:layout_width="12.0dip"
            android:layout_height="18.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:background="@drawable/area_arrow" />
    </RelativeLayout>
    

</LinearLayout>

