<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_main_bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_above="@id/tv_sign_failed"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/content_margin"
            android:src="@drawable/party_sign_success" />
        <Button
            android:id="@+id/btn_sure"
            style="@style/btn_postive_style"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pop_menu_button_high"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/double_content_margin"
            android:layout_marginRight="@dimen/double_content_margin"
            android:text="组织付费活动" />

        <TextView
            android:id="@+id/tv_sign_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_sure"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="40.0dip"
            android:gravity="center_horizontal"
            android:text="认证成功"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_20" />



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/double_content_margin"
            android:layout_marginRight="@dimen/double_content_margin"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:layout_below="@+id/btn_sure"
            android:layout_alignStart="@+id/btn_sure">

            <TextView
                android:id="@+id/tv_limit_change_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="额度认证与变更规则"
                android:textColor="@color/service_statement_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_msg_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/content_margin"
                android:text="代收协议"
                android:textColor="@color/service_statement_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>