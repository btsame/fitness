<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:inputType="number"
        android:ems="10"
        android:hint="手机号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_account"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <EditText
        android:hint="密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_pwd"
        android:layout_below="@+id/et_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:onClick="login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登 录"
        android:id="@+id/btn_login"
        android:layout_below="@+id/tv_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他方式登录"
        android:id="@+id/textView"
        android:layout_below="@+id/btn_login"
        android:layout_toRightOf="@+id/tv_register"
        android:layout_toEndOf="@+id/tv_register"
        android:layout_marginTop="44dp" />

    <TextView

        android:onClick="register"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册账号"
        android:id="@+id/tv_register"
        android:layout_below="@+id/et_pwd"
        android:layout_alignLeft="@+id/et_pwd"
        android:layout_alignStart="@+id/et_pwd"
        android:layout_marginTop="27dp" />

    <TextView
        android:onClick="forgetPassword"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:id="@+id/tv_forget"
        android:layout_alignTop="@+id/tv_register"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
</RelativeLayout>
