<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/appgreen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="手机注册"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="10dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_phone_user"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/edit_input_background"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:paddingLeft="10.0dip"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:background="@drawable/testselector"
        android:orientation="horizontal">

        <EditText
            android:inputType="textPassword"
            android:id="@+id/edit_phone_pwd"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_input_background"
            android:hint="请输入6-16位字母或数字密码"
            android:maxLength="16"
            android:minLines="4"
            android:paddingLeft="10.0dip"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dip"
        android:background="@drawable/testselector"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_reister_phone_auth"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_input_background"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:minLines="4"
            android:paddingLeft="10.0dip"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp" />

        <Button
            android:id="@+id/btn_reister_getphone_auth"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/gray_button_selector"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dip"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/register_chkphone_enoughAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:checked="true"
            android:text="注册即表示你同意"
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/register_txt_treaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户注册协议》"
            android:textColor="#338CD7"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/green_button_selector"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="14.0sp" />

</LinearLayout>