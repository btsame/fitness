<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="52dip"
        android:layout_gravity="center"
        android:background="#808080" >


        <TextView
            android:id="@+id/register_phone_login"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="手机快速注册"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/update_password_item_bg_top"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:text="手\t机:"
            android:textColor="#555555"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/edit_phone_user"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dip"
            android:layout_weight="3"
            android:background="@android:color/white"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/update_password_item_bg_middle"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:text="密\t码:"
            android:textColor="#555555"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/edit_phone_pwd"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dip"
            android:layout_weight="3"
            android:background="@android:color/white"
            android:hint="6-20位字符,不能使用空格"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_reister_show_password"
            android:layout_width="45dip"
            android:layout_height="30dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_register_selector"
            android:text="显示"
            android:textColor="#454545"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/update_password_item_bg_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:text="验证码"
            android:textColor="#555555"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/edit_reister_phone_yzm"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dip"
            android:layout_weight="3"
            android:background="@android:color/white"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_reister_getphone_yzm"
            android:layout_width="90dip"
            android:layout_height="35dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_register_selector"
            android:text="获取验证码"
            android:textColor="#454545"
            android:textSize="14sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/register_chkphone_enoughAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:checked="true"
            android:text="注册即表示你同意"
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/register_txt_treaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户注册协议》"
            android:textColor="#338CD7"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_phone"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="10.0dip"
        android:background="#808080"
        android:text="注册"
        android:textColor="#FFFDFB"
        android:textSize="20sp" />


</LinearLayout>