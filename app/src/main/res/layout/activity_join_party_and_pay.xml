<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@color/appgreen">

                <ImageButton
                    android:id="@+id/left_button"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="22.0dip"
                    android:background="@null"
                    android:src="@drawable/btn_back_arrow_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="报名参加"
                    android:textColor="@color/white"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/right_button"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20.0dip"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>


            <TextView
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="20.0dip"
                android:text="活动名称"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/font_size_secondary_title" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="4.0dip"
                android:background="@color/text_subtitle_color" />

            <TextView
                android:id="@+id/courseGym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="8.0dip"
                android:text="活动地址"
                android:textColor="@color/text_secondTitle_color"
                android:textSize="@dimen/font_size_subtitle" />

            <TextView
                android:id="@+id/courseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="-4.0dip"
                android:text="活动时间"
                android:textColor="@color/text_subtitle_color"
                android:textSize="@dimen/font_size_subtitle" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@color/divider_color_dark" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="人数"
                    android:textColor="@color/text_secondTitle_color"
                    android:textSize="@dimen/font_size_subtitle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ivCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:text="1人"
                        android:textColor="@color/text_secondTitle_color"
                        android:textSize="@dimen/font_size_subtitle" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@color/divider_color_dark" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="价格"
                    android:textColor="@color/text_secondTitle_color"
                    android:textSize="@dimen/font_size_subtitle" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ivPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:text="199元/人"
                        android:textColor="@color/text_secondTitle_color"
                        android:textSize="@dimen/font_size_subtitle" />

                </LinearLayout>

            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@color/divider_color_dark" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textColor="@color/text_secondTitle_color"
                    android:textSize="@dimen/font_size_subtitle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ivTele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="11"
                        android:minWidth="100dip"
                        android:textColor="@color/text_secondTitle_color"
                        android:textSize="@dimen/font_size_subtitle" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@color/divider_color_dark" />


            <RelativeLayout
                android:id="@+id/layout_profile_phone"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/btn_inside_bg_selector_new"
                android:minHeight="@dimen/content_item_high"
                android:onClick="OnChangeUserType">

                <TextView
                    android:id="@+id/tv_leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/content_margin"
                    android:layout_marginTop="@dimen/content_margin"
                    android:text="支付方式"
                    android:textColor="@color/text_secondTitle_color"
                    android:textSize="@dimen/font_size_subtitle" />


                <ImageView
                    android:id="@+id/iv_profile_user_arrow"
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:background="@drawable/area_arrow"
                    android:visibility="visible" />

                <TextView

                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_profile_user_arrow"
                    android:singleLine="true"
                    android:text="选择支付"
                    android:textColor="@color/text_secondTitle_color"
                    android:textSize="@dimen/font_size_subtitle" />

                <ImageView
                    android:id="@+id/iv_pay_icon"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/content_margin"
                    android:layout_toLeftOf="@id/tv_pay_type"
                     />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@color/divider_color_dark" />


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="66.0dip"
        android:layout_gravity="bottom"
        android:background="@color/divider_color">

        <TextView
            android:id="@+id/payAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@id/btnSubmit"

            android:text="支付金额：199元"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_text" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="120.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:background="@color/appgreen"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_secondary_title" />
    </RelativeLayout>
</FrameLayout>