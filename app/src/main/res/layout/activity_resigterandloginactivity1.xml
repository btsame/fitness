<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/appgreen">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">
        <EditText

            android:id="@+id/et_account"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/edit_input_background"
            android:hint="手机号码"
            android:paddingLeft="10dip"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dip"
        android:background="@drawable/testselector"
        android:orientation="horizontal">
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_input_background"
            android:hint="请输入6-16位字母或数字密码"
            android:maxLength="16"
            android:minLines="4"
            android:paddingLeft="10.0dip"
            android:textColor="@color/black"
            android:textColorHint="@color/app_register_gray"
            android:textSize="12.0sp"  />

    </LinearLayout>

    <Button
        android:onClick="login"
        android:id="@+id/forget_go_registerbyphone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/linearLayout3"
        android:layout_margin="10.0dip"
        android:background="@drawable/green_button_selector"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="14.0sp" />


<RelativeLayout
    android:layout_margin="10dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:onClick="register"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册账号"
        android:id="@+id/tv_register"
        android:layout_alignTop="@+id/tv_forget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_centerVertical="true"
        android:onClick="forgetPassword"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:id="@+id/tv_forget"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />
</RelativeLayout>
    <include layout="@layout/layout_login_by_other_bottom" />
</LinearLayout>
