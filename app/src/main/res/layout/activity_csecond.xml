<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/appgreen"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/left_button"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="22.0dip"
            android:background="@null"
            android:src="@drawable/btn_back_arrow_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="作品认证"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/next_temp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:gravity="center"
            android:text="完成" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="15.0dip">

                <TextView
                    android:id="@+id/xgzs_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健身私教认证*"
                    android:textColor="#ff565656"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/xgzs_hint"
                    android:text="(请选择至少一种相关证书)"
                    android:textSize="11.0sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="32.0dip"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/edit_c_background">

                <EditText
                    android:id="@+id/input_rzjg"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#ffbebebe"
                    android:textColorHint="#ffbebebe"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chose_card"
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:src="@mipmap/chose_photo_c" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15.0dip"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/show_chose_layout_1"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:visibility="invisible">

                        <ImageView
                            android:id="@+id/show_chose_1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:id="@+id/delete_chose_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/delete_chose_photos" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/show_chose_layout_2"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15.0dip"
                        android:layout_weight="1.0"
                        android:visibility="invisible">

                        <ImageView
                            android:id="@+id/show_chose_2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:id="@+id/delete_chose_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/delete_chose_photos" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/show_chose_layout_3"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15.0dip"
                        android:layout_weight="1.0"
                        android:visibility="invisible">

                        <ImageView
                            android:id="@+id/show_chose_3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                        <ImageView
                            android:id="@+id/delete_chose_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/delete_chose_photos" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="30.0dip">

                <TextView
                    android:id="@id/jbzl_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健身达人认证*"
                    android:textColor="#ff565656"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@id/jbzl_hint"
                    android:text="(需提供微博、秒拍、美拍、优酷等个人主页链接)"
                    android:textSize="11.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="32.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/edit_c_background">

                <EditText
                    android:id="@+id/input_lscj1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#ffbebebe"
                    android:textColorHint="#ffbebebe"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/input_2_layout"
                android:layout_width="fill_parent"
                android:layout_height="32.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/edit_c_background"
                android:visibility="gone">

                <EditText
                    android:id="@+id/input_lscj2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#ffbebebe"
                    android:textColorHint="#ffbebebe"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/remov2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15.0dip"
                    android:gravity="center"
                    android:text="移除"
                    android:textColor="@color/red"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/input_3_layout"
                android:layout_width="fill_parent"
                android:layout_height="32.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/edit_c_background"
                android:visibility="gone">

                <EditText
                    android:id="@+id/input_lscj3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#ffbebebe"
                    android:textColorHint="#ffbebebe"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/remov3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15.0dip"
                    android:gravity="center"
                    android:text="移除"
                    android:textColor="@color/red"
                    android:textSize="13.0sp" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="50.0dip"
                android:text="请保证填写的资料真实有效"
                android:textSize="12.0sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="2.0dip"
                android:text="我们有权针对非真实资料认证用户做出处理"
                android:textSize="12.0sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>