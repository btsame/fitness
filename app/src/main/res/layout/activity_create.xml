<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/appgreen">

                <ImageButton
                    android:id="@+id/left_button"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="22.0dip"
                    android:background="@null"
                    android:src="@drawable/btn_back_arrow_selector" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:text="创建活动"
                    android:textColor="@color/white"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_publish_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:text="发布"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15.0dip">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_show_act_pic"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:background="@color/appgreen" />

                <LinearLayout
                    android:id="@+id/ll_upload_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:src="@drawable/rich_button_camera_yes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传照片" />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动主题："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/et_act_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@color/appgray" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="人数限制："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <EditText
                    android:maxLength="3"
                    android:id="@+id/et_act_totalnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="建议20人以内"
                    android:inputType="number"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@color/appgray" />

            <RelativeLayout
                android:id="@+id/rl_act_type"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_centerVertical="true"
                    android:text="活动类型："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_act_type"
                    android:layout_marginRight="35dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_act_fee"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_centerVertical="true"
                    android:text="活动费用"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_act_fee"
                    android:layout_marginRight="35dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@color/appgray" />

            <RelativeLayout

                android:id="@+id/rl_more_settings"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_centerVertical="true"
                    android:text="更多设置"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_act_more"
                    android:layout_marginRight="35dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动标签："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <EditText
                    android:hint="格式为#减脂##瘦腿#,最多添加两个"
                    android:singleLine="true"
                    android:id="@+id/et_act_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textAlignment="textStart"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="性别限制："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <Button
                    android:id="@+id/et_act_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textAlignment="textStart"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="开始时间："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <Button
                    android:id="@+id/btn_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="number"
                    android:textAlignment="textStart"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="结束时间："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <Button
                    android:id="@+id/btn_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="number"
                    android:textAlignment="textStart"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动城市："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <Button
                    android:id="@+id/btn_act_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textAlignment="textStart"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动地点："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <EditText
                    android:id="@+id/et_act_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="自备器材："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <EditText
                    android:id="@+id/et_act_equipment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="淋浴锁柜："
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <Button
                    android:id="@+id/et_act_shower_locker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textAlignment="textStart"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>



            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_act_instruction"
                    android:layout_width="fill_parent"
                    android:layout_height="240.0dip"
                    android:layout_marginEnd="12.0dip"
                    android:layout_marginStart="12.0dip"
                    android:layout_marginTop="11.0dip"
                    android:background="@drawable/edit_user_background"
                    android:gravity="top"
                    android:hint="活动说明"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="9.0dip"
                    android:textColor="@color/top_introduce_text_color"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_publish_activity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10.0dip"
                android:background="@drawable/green_button_selector"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="14.0sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
