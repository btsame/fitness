<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.dkjs.fitness.comm.HeadTitleView
                android:id="@+id/headview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:titleText="活动创建"
                custom:rightText="发布"/>


             <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="15.0dip">

                   <com.facebook.drawee.view.SimpleDraweeView
                       android:id="@+id/sdv_show_act_pic"
                       android:layout_width="match_parent"
                       android:layout_height="200dip"
                       android:background="@color/appgreen" />

                   <LinearLayout
                       android:id="@+id/ll_upload_pic"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dip"
                           android:layout_height="50dip"
                           android:src="@drawable/rich_button_camera_yes" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="上传照片" />
                   </LinearLayout>

             </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动主题"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <EditText
                    android:layout_marginRight="35dip"
                    android:textAlignment="textEnd"
                    android:id="@+id/et_act_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true" />
            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="10dip"
                android:id="@+id/rl_act_strat_time"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="开始时间"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <TextView
                    android:id="@+id/tv_act_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dip"
                    android:text="" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_end_time"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="结束时间"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <TextView
                    android:id="@+id/tv_act_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dip"
                    android:text="" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_act_city"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动城市"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <TextView
                    android:id="@+id/tv_act_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dip"
                    android:text="" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动地点"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <EditText
                    android:layout_marginRight="35dip"
                    android:textAlignment="textEnd"
                    android:id="@+id/et_act_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_act_fee"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动费用"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <TextView
                    android:id="@+id/tv_act_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dip"
                    android:text="" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_act_instruction"
                    android:layout_width="fill_parent"
                    android:layout_height="240.0dip"
                    android:layout_marginEnd="12.0dip"
                    android:layout_marginStart="12.0dip"
                    android:layout_marginTop="11.0dip"
                    android:background="@drawable/edit_user_background"
                    android:gravity="top"
                    android:hint="活动描述"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="9.0dip"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动名额 "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <EditText
                    android:layout_marginRight="35dip"
                   android:textAlignment="textEnd"
                    android:id="@+id/et_act_totalnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="建议20人以内"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_act_type"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="活动类型"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <TextView
                    android:id="@+id/tv_act_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dip"
                    android:text="" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/rl_more_settings"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:background="@drawable/edit_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="更多设置"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/top_introduce_text_color" />

                <TextView
                    android:id="@+id/tv_act_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dip"
                    android:text="" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="18.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:background="@drawable/area_arrow" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_publish_activity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10.0dip"
                android:background="@drawable/green_button_selector"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="14.0sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
