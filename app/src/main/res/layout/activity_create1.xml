<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/appgreen">

        <ImageButton
            android:id="@+id/left_button"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="22.0dip"
            android:background="@null"
            android:src="@drawable/btn_back_arrow_selector" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="发起活动"
            android:textColor="@color/white"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_publish_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:onClick="OnSave"
            android:text="发布"
            android:textColor="@android:color/white" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scroll_wrapper_in_take_photo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:id="@+id/send_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/et_act_instruction"
                android:layout_width="fill_parent"
                android:layout_height="250.0dip"
                android:layout_marginBottom="5.0dip"
                android:background="@color/white"
                android:gravity="top"
                android:paddingLeft="14.0dip"
                android:paddingRight="14.0dip"
                android:paddingTop="14.0dip"
                android:textColorHint="@color/c_gray"
                android:textSize="15.0sp" />

            <LinearLayout
                android:id="@+id/info_wrapper_without_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">



                <RelativeLayout
                    android:layout_marginBottom="5dip"
                    android:id="@+id/takephoto_img_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip">


                    <FrameLayout
                        android:id="@+id/fl_upload_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="14.0dip"
                        android:layout_marginRight="14.0dip"
                        android:background="@color/ed_bg">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/sdv_show_act_pic"
                            android:layout_width="60dip"
                            android:layout_height="60dip" />

                        <LinearLayout
                            android:id="@+id/ll_upload_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/takephoto_camera" />
                        </LinearLayout>

                    </FrameLayout>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/operation"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@color/grayback"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/setting_gray"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dip"
                        android:background="@drawable/edit_input_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0dip"
                            android:text="活动主题"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/top_introduce_text_color" />

                        <EditText
                            android:id="@+id/et_act_subject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:background="@null"
                            android:singleLine="true"
                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_set_time"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/starttime_image_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间"
                            android:textColor="@color/setting_text_gray_color"
                            android:textSize="12.0sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_set_location"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_location_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地点"
                            android:textColor="@color/setting_text_gray_color"
                            android:textSize="12.0sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_set_account"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/me_fans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人数"
                            android:textColor="@color/setting_text_gray_color"
                            android:textSize="12.0sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_set_fee"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/me_party_income" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格"
                            android:textColor="@color/setting_text_gray_color"
                            android:textSize="12.0sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_set_tag"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/tab" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="标签"
                            android:textColor="@color/setting_text_gray_color"
                            android:textSize="12.0sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_set_more"

                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dip"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/me_setting_p" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textColor="@color/setting_text_gray_color"
                            android:textSize="12.0sp" />
                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/share_wrapper_in_take_photo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="12.0dip"
                        android:paddingTop="12.0dip">

                        <TextView
                            android:id="@+id/sync_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14.0dip"
                            android:text="同步到"
                            android:textColor="@color/setting_text_gray_color" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40.0dip"
                            android:layout_toRightOf="@id/sync_text">

                            <Button
                                android:id="@+id/take_we_chat"
                                android:layout_width="30.0dip"
                                android:layout_height="30.0dip"
                                android:background="@drawable/take_we_chat_off" />

                            <Button
                                android:id="@+id/take_qq"
                                android:layout_width="30.0dip"
                                android:layout_height="30.0dip"
                                android:layout_marginLeft="18.0dip"
                                android:background="@drawable/take_qq_off"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/take_weico"
                                android:layout_width="30.0dip"
                                android:layout_height="30.0dip"
                                android:layout_marginLeft="18.0dip"
                                android:background="@drawable/take_weico_off" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/lock_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginTop="18.0dip"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/take_photo_lock_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/timeline_unlock" />

                            <TextView
                                android:id="@+id/take_photo_lock_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5.0dip"
                                android:layout_toRightOf="@id/take_photo_lock_img"
                                android:text="公开"
                                android:textColor="@color/timeline_unlock_color"
                                android:textSize="12.0sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>